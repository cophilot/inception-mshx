#!/bin/bash
#??Get the manual for a msh script
#&&mshx,inception-mshx
###Get the manual for a msh script
###Usage: msm <script-name>

if [ $# -ne 1 ]; then
    echo "Command takes exactly one argument"
    echo "Help: msm -help"
    exit 1
fi

if [ $1 == "-h" ] || [ $1 == "-help" ]; then
    msh manual msm
    exit 0
fi

msh ls -c | grep $1 --color=always
