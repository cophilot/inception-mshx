#!/bin/bash
#??Search within the myshell scripts
#&&mshx,inception-mshx
###Search within the myshell scripts
###Usage: msh-search <pattern>

if [ $# -le 1 ]; then
    echo "Command 'msh-search' requires at least one argument."
    echo "Help: msh-search -help"
    exit 1
fi

if [ $1 == "-h" ] || [ $1 == "-help" ]; then
    msh manual msh-search
    exit 0
fi

search_pattern=$1

shift

msh ls -c $@ | grep "$search_pattern" --color=always
